# main server block
server {

	location / {
		include /config/nginx/proxy.conf;
    resolver 127.0.0.11 valid=30s;
    set $upstream_app frontend;
    set $upstream_port 8080;
    set $upstream_proto http;
    proxy_pass $upstream_proto://$upstream_app:$upstream_port;
	}

  # stream
	location /hls {
		root /tmp;
	}

	# stats
	location /stats {
		rtmp_stat all;
	}
}
